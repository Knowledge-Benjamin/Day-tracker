<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Goal Title -->
    <TextView
        android:id="@+id/widget_goal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Goal Description -->
    <TextView
        android:id="@+id/widget_goal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:textSize="12sp"
        android:textColor="#CCCCCC"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="12dp" />

    <!-- Stats Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- Days Logged -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_days_logged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days Logged"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />
        </LinearLayout>

        <!-- Days Elapsed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_days_elapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF5722" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days Elapsed"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />
        </LinearLayout>

        <!-- Days Remaining -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_days_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days Left"
                android:textSize="10sp"
                android:textColor="#AAAAAA" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bars -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logged Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ProgressBar
                android:id="@+id/widget_logged_progress_bar"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressTint="#4CAF50"
                android:progressBackgroundTint="#333333"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/widget_logged_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000%"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:minWidth="60dp"
                android:gravity="end" />
        </LinearLayout>

        <!-- Elapsed Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/widget_elapsed_progress_bar"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressTint="#FF5722"
                android:progressBackgroundTint="#333333"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/widget_elapsed_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000%"
                android:textSize="11sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:minWidth="60dp"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
